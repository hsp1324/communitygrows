%h1 Add New Committee

.container.well
  #flashNotice= flash[:notice]
  = button_to committee_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br

  = form_tag crud_create_committee_path(do_action: "create") do
    .form-group
      = label :committee, :name, 'Committee Name'
      = text_field :committee, 'name', class: 'form-control'
      %br
      = label :committee, :description, 'Committee Description'
      = text_field :committee, 'description', class: 'form-control'


    = submit_tag 'Submit', class: 'btn btn-success'