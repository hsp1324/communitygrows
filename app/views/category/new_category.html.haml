%h1 Add New Category

.container.well
  #flashNotice= flash[:notice]
  = button_to category_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br

  = form_tag create_category_path do
    .form-group
      = label :category, :name, 'Category Name'
      = text_field :category, 'name', class: 'form-control'

    = submit_tag 'Submit', class: 'btn btn-success'