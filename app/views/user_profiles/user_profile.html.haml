.container.text-center
    %h1 #{@user.name}
    %img#profpic{:src => @user.picture, :height => 232, :width => 217}
    %p 
        Email: 
        %b #{@user.email}
    %p 
        Committees:
        - committees_0 = [] 
        - @user.committees.each {|committee| committees_0<<committee.name}
        - committees_00 = committees_0.each_slice(2).map(&:first)              
        - committees_01 = committees_00.map(&:inspect).join(', ')
        - committees_01.gsub!(/"/, '')
        %b #{committees_01}
    %p 
        Board Role: 
        %b #{@user.board_role}
  
.container.well
    %h2 Personal Information
    %h4 Gender
    %p #{@user.gender}
    %h4 Ethnicity
    %p #{@user.ethnicity}
    
    %h4 About Me
    %p #{@user.about_me}
    
    %h4 Job Information
    %p Current Company: #{@user.current_company}
    %p Current Position: #{@user.current_position}
    
    %h4 Why I Joined Community Grows
    %p #{@user.why_join}
    
    %h4 Areas of Expertise
    %ul
    - @areasOfExpertise.each do |expertise|
        %li #{expertise.name}
    
    %h4 Constituency
    %ul
    - @constituencies.each do |constituency|
        %li #{constituency.name}
    