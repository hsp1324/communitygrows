%h1 Add New Calendar
:css
  .form-control:focus {
      outline:0 !important
  }

.container.well
  #flashNotice= flash[:notice]
  = button_to calendar_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br

  = form_tag create_calendar_path do
    .form-group
      = label :calendar, :name, 'Calendar Name'
      = text_field :calendar, 'name', class: 'form-control'
    .form-group
      = label :calendar, :link, 'Public ICAL Link'
      = text_field :calendar, 'link', class: 'form-control'
    .form-group
      %label Color Option: 
      
      %select{:name => "calendar[color]", :id => "color", :style=>"max-width:300;"}
        %option{:style => "background-color: LightGrey;", :value => "#D3D3D3"} LightGray
        %option{:style => "background-color: Aquamarine;", :value => "#7FFFD4"} Aquamarine
        %option{:style => "background-color: Blue;", :value => "#0000FF"} Blue
        %option{:style => "background-color: Navy;color: #FFFFFF;", :value => "#000080"} Navy
        %option{:style => "background-color: Purple;color: #FFFFFF;", :value => "#800080"} Purple
        %option{:style => "background-color: DeepPink;", :value => "#FF1493"} DeepPink
        %option{:style => "background-color: Violet;", :value => "#EE82EE"} Violet
        %option{:style => "background-color: DarkGreen;color: #FFFFFF;", :value => "#006400"} DarkGreen
        %option{:style => "background-color: Green;color: #FFFFFF;", :value => "#008000"} Green
        %option{:style => "background-color: YellowGreen;", :value => "#9ACD32"} YellowGreen
        %opption{:style => "background-color: Orange;", :value => "#FFA500"} Orange
        %option{:style => "background-color: Red;", :value => "#FF0000"} Red
        %option{:style => "background-color: Brown;", :value => "#A52A2A"} Brown
        %option{:style => "background-color: BurlyWood;", :value => "#DEB887"} BurlyWood
        %option{:style => "background-color: Beige;", :value => "#F5F5DC"} Beige
    = submit_tag 'Submit', class: 'btn btn-success'
  