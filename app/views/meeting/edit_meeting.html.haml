%h1 Edit "#{@meeting.name}"

.container.well
  #flashNotice= flash[:notice]
  =button_to meeting_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br


    .form-group
    = label :meeting, :name, 'Update Meeting Attributes'
    %table.table.table-bordered.table-striped
      #announcement_content
        %tbody
          %tr
            %td
              = form_tag update_meeting_path(@id, @meeting), :method => :put do
                .form-group
                  = label :meeting, :name, 'Meeting Name'
                  = text_field :meeting, 'name', :value => @meeting.name, class: 'form-control'

