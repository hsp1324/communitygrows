%h1 Edit "#{@calendar.name}"

.container.well
  #flashNotice= flash[:notice]
  =button_to calendar_index_path, :method => :get, class: 'btn btn-info' do
    %span.glyphicon.glyphicon-arrow-left
    Back
  %br
    = form_tag edit_calendar_path(@id, @calendar), :method => :put do
      .form-group
        = label :calendar, :name, 'Calendar Name'
        = text_field :calendar, 'name', :value => @calendar.name, class: 'form-control'
      .form-group
        = label :calendar, :link, 'Public ICAL Link'
        = text_field :calendar, 'link', :value => @calendar.link, class: 'form-control'
      .form-group
        %label Color Option: 
        %select{:name => "calendar[color]", :id => "color", :style=>"max-width:300;"}
          %option{:selected => ("selected" unless @previous!=0), :style => "background-color: LightGrey;", :value => "#D3D3D3"} LightGray
          %option{:selected => ("selected" unless @previous!=1), :style => "background-color: Aquamarine;", :value => "#7FFFD4"} Aquamarine
          %option{:selected => ("selected" unless @previous!=2), :style => "background-color: Blue;", :value => "#0000FF"} Blue
          %option{:selected => ("selected" unless @previous!=3), :style => "background-color: Navy;color: #FFFFFF;", :value => "#000080"} Navy
          %option{:selected => ("selected" unless @previous!=4), :style => "background-color: Purple;color: #FFFFFF;", :value => "#800080"} Purple
          %option{:selected => ("selected" unless @previous!=5), :style => "background-color: DeepPink;", :value => "#FF1493"} DeepPink
          %option{:selected => ("selected" unless @previous!=6), :style => "background-color: Violet;", :value => "#EE82EE"} Violet
          %option{:selected => ("selected" unless @previous!=7), :style => "background-color: DarkGreen;color: #FFFFFF;", :value => "#006400"} DarkGreen
          %option{:selected => ("selected" unless @previous!=8), :style => "background-color: Green;color: #FFFFFF;", :value => "#008000"} Green
          %option{:selected => ("selected" unless @previous!=9), :style => "background-color: YellowGreen;", :value => "#9ACD32"} YellowGreen
          %option{:selected => ("selected" unless @previous!=10), :style => "background-color: Orange;", :value => "#FFA500"} Orange
          %option{:selected => ("selected" unless @previous!=11), :style => "background-color: Red;", :value => "#FF0000"} Red
          %option{:selected => ("selected" unless @previous!=12), :style => "background-color: Brown;", :value => "#A52A2A"} Brown
          %option{:selected => ("selected" unless @previous!=13), :style => "background-color: BurlyWood;", :value => "#DEB887"} BurlyWood
          %option{:selected => ("selected" unless @previous!=14), :style => "background-color: Beige;", :value => "#F5F5DC"} Beige
      = submit_tag 'Update Calendar', class: 'btn btn-success'